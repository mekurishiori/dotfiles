[core]
    autocrlf = false
    quotepath = false
    ignorecase = false
    pager = nkf -w | LESSCHARSET=utf-8 less
    excludesfile = ~/dotfiles/.gitignore_global
[push]
    default = simple
[pull]
    rebase = merges
[merge]
    tool = vimdiff
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGE -c '$wincmd w' -c 'wincmd J'
[rerere]
    enabled = true
[diff]
    tool = vimdiff
    algorithm = histogram
[difftool]
    prompt = false
[help]
    autocorrect = -1
[color]
    ui = auto
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[alias]
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
    staged = diff --cached
[ghq]
    root = ~/src
